<div class="signup_container">
  <div class="signup_title-container">
    <h2 class="signup_title">Cadastre-se Para ComeÃ§ar a Postar</h2>
  </div>
  <form class="signup_form" action="/sign-up" method="post">
    <input type="email" name="email" placeholder="E-mail" class="signup_input">
    <% if (errorEmail) { %>
    <div class="validationError">
      <p><%= errorEmail %></p>
    </div>
    <% } %>
    <input type="text" name="name" placeholder="Nome Completo" class="signup_input">
    <% if (errorName) { %>
    <div class="validationError">
      <p><%= errorName %></p>
    </div>
    <% } %>
    <input type="password" name="password" placeholder="Senha" class="signup_input">
    <% if (errorPassword) { %>
    <div class="validationError">
      <p><%= errorPassword %></p>
    </div>
    <% } %>
    <button class="signup_button">Cadastrar</button>
 </form>
</div>
