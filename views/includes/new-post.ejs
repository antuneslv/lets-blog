<div class="new-post_container">
  <form action="/new-post" method="post">
    <input type="text" name="title" placeholder="Título do Post" class="new-post_title">
    <textarea name="content" cols="30" rows="24" placeholder="Conteúdo do Post" class="new-post_content"></textarea>
    <% if (isInvalid) { %>
    <div class="validation-error">
      <p>Todos os campos são obrigatórios.</p>
    </div>
    <% } %>
    <button class="new-post_submit-btn">Novo Post</button>
  </form>
</div>
